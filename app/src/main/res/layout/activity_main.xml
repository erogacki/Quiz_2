<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.erogacki.quiz_2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate the Grade Percentages"
        android:textSize="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter # A Students"
        android:id="@+id/totalAs" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter # of 'B' Students"
        android:id="@+id/totalBs" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter # 'C' Students"
        android:id="@+id/totalCs" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter # 'D' Students"
        android:id="@+id/totalDs" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter # 'F' Students"
        android:id="@+id/totalFs" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Total # of Students"
        android:id="@+id/totalStudents" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calcbtn"
        android:textSize="30dp"/>











</LinearLayout>
